{
  "name": "ndxbn/lib",
  "description": "my library.",
  "type": "library",
  "license": "MIT",
  "scripts": {
	"test": [
	  "@lint",
	  "phpunit"
	],
	"lint": [
	  "phpstan --xdebug analyse"
	]
  },
  "autoload": {
	"psr-4": {
	  "Ndxbn\\Lib\\": "src/"
	}
  },
  "autoload-dev": {
	"psr-4": {
	  "Ndxbn\\Lib\\": "tests/"
	}
  },
  "authors": [
	{
	  "name": "Sitri Kamishirasawa",
	  "email": "sitri.ndxbn@gmail.com"
	}
  ],
  "require": {
	"php": "^8.0"
  },
  "require-dev": {
    "ext-xdebug": "^3.2",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "*",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpunit/phpunit": ">=9.5"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
	"sort-packages": true
  }
}
